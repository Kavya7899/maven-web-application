node{
def mavenHome = tool name:"Maven-3.8.4"

properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([pollSCM('* * * * *')])])


echo "the branch name: ${env.BRANCH_NAME}"
echo "the job name : ${env.JOB_NAME}"
try{
stage("code checkout")

{
git branch: 'development', credentialsId: '2f08d3b4-5a39-4a33-aa6c-bf4b61444c8f', url: 'https://github.com/Kavya7899/maven-web-application.git'
}

stage("build")
{
sh "${mavenHome}/bin/mvn clean package"
}

stage("sonarqube report")
{
sh "${mavenHome}/bin/mvn sonar:sonar"
}

stage("upload artifacts into nexus")
{
sh "${mavenHome}/bin/mvn deploy"
}

stage ("deploy to tomcat")
{
sshagent(['a350d2b3-1239-46d9-a5f7-f37e25eed11c']) {
sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user3.109.3.243:/opt/apache-tomcat-9.0.64/webapps"

}
}
}catch(e){
currentbuild.result = "FAILED"
throw e
}
finally{
sendSlackNotification (currentbuild.result)
}



}//node ending

//slack notifications
def sendSlackNotifications(Current buildStatus = 'STARTED') {
  
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel: 'walmart')
}






